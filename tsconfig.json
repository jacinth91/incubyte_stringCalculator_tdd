{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "skipLibCheck": true,
    "moduleResolution": "node",     // or "node16" if you want more strict ESM rules
    "isolatedModules": true,        // required for ts-jest to handle each file
    "noEmit": true,                 // don't output .js files when you run tsc
    "strict": true
  },
  "include": ["src"]
}
